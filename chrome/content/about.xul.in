<!DOCTYPE dialog [
<!ENTITY % brandDTD SYSTEM "chrome://tabsidebar/locale/brand.dtd">
<!ENTITY % localeDTD SYSTEM "chrome://tabsidebar/locale/about.dtd">
%brandDTD;
%localeDTD;
]>

<?xml-stylesheet href="chrome://global/skin/global.css"?>
<?xml-stylesheet href="chrome://tabsidebar/skin/about.css" type="text/css"?>

<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        title="&dialog.title;" buttons="accept,help" defaultButton="accept" buttonlabelaccept="&dialog.accept;"
        ondialoghelp="help.openHelp()" style="width: 30em; height: 30em;">

  <script src="chrome://tabsidebar/content/help.js"/>
  
  <vbox pack="start" align="stretch" flex="1">
  
    <hbox id="header" align="center">
    
      <image src="chrome://tabsidebar/skin/logo.png"/>
      
      <vbox flex="1">
        <label class="title" value="&tabsidebar.brand;"/>
        <hbox>
          <label class="bold version" value="&dialog.version; @version@"/>
        </hbox>
        <separator class="groove-thin"/>
        <hbox>
          <label class="bold author" value="&dialog.author; Mossop"/>
        </hbox>
      </vbox>
    
    </hbox>
    
    <separator class="groove-thin"/>

    <vbox id="body" flex="1">
    
      <description>&dialog.description;</description>
  
      <separator class="thin"/>
  
      <hbox pack="end">
        <label class="text-link" onclick="window.opener.open('http://users.blueprintit.co.uk/~dave/web/firefox/TabSidebar', '_blank')" value="&dialog.homepage;"/>
      </hbox>
  
      <separator class="thin"/>
  
      <label class="bold" value="&dialog.contributors;"/>
      
      <separator class="thin"/>
  
      <vbox flex="1" style="overflow: auto">
        <description>Peter van der Woude: Extensive testing, suggestions and contributions as well as the Dutch localisation.</description>
        <description>ReinekeFux: German localisation.</description>
        <description>Xavier Robin: French localisation.</description>
        <description>MatrixIsAllOver: Italian localisation</description>
        <description>Erkan Kaplan: Turkish localisation.</description>
        <description>SION: Japanese localisation</description>
        <description>Alexander L. Slovesnik: Russian localisation</description>
      </vbox>
      
    </vbox>
      
  </vbox>

</dialog>
