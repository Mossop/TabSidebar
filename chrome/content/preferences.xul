<?xml-stylesheet href="chrome://global/skin/global.css"?>
<?xml-stylesheet href="chrome://tabsidebar/skin/preferences.css"?>

<!DOCTYPE overlay [
<!ENTITY % brandDTD SYSTEM "chrome://tabsidebar/locale/brand.dtd">
<!ENTITY % localeDTD SYSTEM "chrome://tabsidebar/locale/preferences.dtd">
%brandDTD;
%localeDTD;
]>

<prefwindow id="TabSidebarOptions" windowtype="TabSidebar:Options"
            title="&tabsidebar.options.title;"
            xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  
  <prefpane id="paneGeneral" label="&paneGeneral.title;"
            helpTopic="options-general" helpURI="chrome://tabsidebar/locale/help/help.rdf">
  
    <preferences>
      <preference type="bool" id="hidetabs"
                 name="tabsidebar.hidetabs"/>
    </preferences>

    <vbox>
      <description>&paneGeneral.description;</description>
    
      <checkbox preference="hidetabs" label="&paneGeneral.hidetabs;"/>
    </vbox>

  </prefpane>
  
  <prefpane id="paneDisplay" label="&paneDisplay.title;"
            helpTopic="options-display" helpURI="chrome://tabsidebar/locale/help/help.rdf">
  
    <preferences>
      <preference type="bool" id="content.reload"
                 name="tabsidebar.content.reload"/>
      <preference type="bool" id="content.favicon"
                 name="tabsidebar.content.favicon"/>
      <preference type="bool" id="content.throbber"
                 name="tabsidebar.content.throbber"/>
      <preference type="bool" id="content.security"
                 name="tabsidebar.content.security"/>
      <preference type="bool" id="content.close"
                 name="tabsidebar.content.close"/>
      <preference type="bool" id="content.preview"
                 name="tabsidebar.content.preview" onchange="preview.showPreviewChanged()"/>
      <preference type="bool" id="content.title"
                 name="tabsidebar.content.title"/>
      <preference type="bool" id="content.uri" 
                 name="tabsidebar.content.uri"/>
    </preferences>

    <vbox>
      <description>&paneDisplay.description;</description>
    
      <checkbox preference="content.favicon" label="&paneDisplay.content.favicon;"/>
      <checkbox preference="content.reload" label="&paneDisplay.content.reload;"/>
      <checkbox preference="content.throbber" label="&paneDisplay.content.throbber;"/>
      <checkbox preference="content.security" label="&paneDisplay.content.security;"/>
      <checkbox preference="content.close" label="&paneDisplay.content.close;"/>
      <checkbox preference="content.preview" label="&paneDisplay.content.preview;"/>
      <checkbox preference="content.title" label="&paneDisplay.content.title;"/>
      <checkbox preference="content.uri" label="&paneDisplay.content.uri;"/>
    </vbox>

  </prefpane>
  
  <script src="chrome://tabsidebar/content/preview.js" type="application/x-javascript"/>
  
  <prefpane id="panePreviews" label="&panePreviews.title;"
            helpTopic="options-previews" helpURI="chrome://tabsidebar/locale/help/help.rdf">

    <preferences>
      <preference type="bool" id="drawscrolled"
                 name="tabsidebar.drawscrolled"/>
      <preference type="bool"  id="autorefresh"
                 name="tabsidebar.autorefresh" onchange="preview.refreshChanged()"/>
      <preference type="int"  id="refreshrate"
                 name="tabsidebar.refreshrate"/>
      <preference type="bool"  id="loadrefresh"
                 name="tabsidebar.loadrefresh" onchange="preview.loadRefreshChanged()"/>
      <preference type="int"  id="loadrefreshrate"
                 name="tabsidebar.loadrefreshrate"/>
      <preference type="int"  id="loaddelay"
                 name="tabsidebar.loaddelay"/>
      <preference type="bool"  id="showadvanced"
                 name="tabsidebar.showadvanced" onchange="preview.toggleAdvanced()"/>
    </preferences>
    
    <vbox>
      <description>&panePreviews.description;</description>
      
      <checkbox preference="drawscrolled" label="&panePreviews.drawscrolled;"/>
      <hbox>
        <checkbox preference="autorefresh" flex="1" label="&panePreviews.autorefresh;"/>
        <textbox id="ratebox" preference="refreshrate"/>
      </hbox>
      <checkbox preference="showadvanced" label="&panePreviews.showadvanced;"/>
    </vbox>
    
    <vbox class="advanced">
      <description>&tabsidebar.advanced;</description>
      <hbox>
        <checkbox preference="loadrefresh" flex="1" label="&panePreviews.loadrefresh;"/>
        <textbox id="loadratebox" preference="loadrefreshrate"/>
      </hbox>
      <hbox align="center">
        <label flex="1" value="&panePreviews.loaddelay;"/>
        <textbox preference="loaddelay"/>
      </hbox>
    </vbox>
    
  </prefpane>

</prefwindow>
