<bindings id="SubPaneBindings"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <binding id="subpane" name="subpane">

    <content>
    </content>

    <implementation>
    
      <property name="action">
        <getter>
          return this.getAttribute("action");
        </getter>
      </property>
      
      <property name="_attribute">
        <getter>
          if (this.action == "hide")
          {
            return "hidden";
          }
          else if (this.action == "disable")
          {
            return "disabled";
          }
          return "";
        </getter>
      </property>
      
      <property name="_invert">
        <getter>
          if (this.action == "hide")
          {
            return true;
          }
          else if (this.action == "disable")
          {
            return true;
          }
          return false;
        </getter>
      </property>
      
      <field name="_value"/>
      <property name="value">
        <setter>
          if (val == this._value)
            return;
            
          this._value = val;
          this._updateElements();
          
          return val;
        </setter>
        <getter>
          return this._value;
        </getter>
      </property>
      
      <method name="_setElementState">
        <parameter name="element"/>
        <parameter name="state"/>
        <body>
          var attribute = this._attribute;
          state = this._invert ? !state : state;

          if (attribute in element) 
            element[attribute] = value;
          else
            element.setAttribute(attribute, value);
        </body>
      </method>
      
      <method name="_updateElements">
        <parameter name="state"/>
        <body>
          var element = this.firstChild;
          while (element)
          {
            this._setElementState(element,state);
            element = element.nextSibling;
          }
        </body>
      </method>
      
    </implementation>
    
  </binding>

</bindings>
